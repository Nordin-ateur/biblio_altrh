<div class="card mb-3 mx-2" style="width: 340px;">
    <div class="row g-0">
        <div class="col-md-4">
            {% if livre.couverture %}
                <img src="{{ chemin_images ~ livre.couverture }}" class="img-fluid rounded-start" alt="couverture {{ livre.titre }}">
            {% else %}
                <img class="img-fluid rounded-start" alt="couverture {{ livre.titre }}">    
            {% endif %}
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{ livre.titre }}</h5>
                <p class="card-text">
                    <a href="{{ path('app_home_auteur', {id: livre.auteur.id}) }}" >{{ livre.auteur.identite }}</a>
                </p>
                <p class="card-text">
                    <small class="text-body-secondary">

                    </small>
                </p>
            </div>

            <div class="card-footer">
                <a href="{{ path('app_home_livre', {id: livre.id}) }}">Voir plus</a>

                {% if is_granted("ROLE_LECTEUR") and livre.disponible %}
                <a href="{{ path('app_espace_lecteur_emprunter', {id: livre.id}) }}" class="card-link">
                    <i class="fa fa-shopping-cart"></i>
                </a>
                {% endif %}

                <a href="{{ path('app_reservation_livre', {id: livre.id}) }}">
                    <i class="fa fa-cart-plus"></i>
                </a>
            </div>
        </div>
    </div>
</div>    
